  "ab_tests": {
    "hero_cta_test": {
      "variants": ["control", "variant_a", "variant_b"],
      "traffic_split": [34, 33, 33],
      "goal_metric": "copy_trade_click",
      "status": "active"
    },
    "pricing_display_test": {
      "variants": ["show_minimum", "show_range"],
      "traffic_split": [50, 50],
      "goal_metric": "form_submission",
      "status": "active"
    }
  },
  "funnel_steps": [
    {
      "name": "page_view",
      "description": "User lands on homepage",
      "trigger": "pageview"
    },
    {
      "name": "performance_view",
      "description": "User views performance section",
      "trigger": "scroll_to_element",
      "element": ".performance-highlights"
    },
    {
      "name": "report_interest",
      "description": "User clicks on report link",
      "trigger": "click",
      "element": "a[href*='/reports/']"
    },
    {
      "name": "cta_view",
      "description": "User views CTA section",
      "trigger": "scroll_to_element",
      "element": ".cta-buttons"
    },
    {
      "name": "copy_trade_intent",
      "description": "User clicks copy trading button",
      "trigger": "click",
      "element": "a[href*='litefinance.org']"
    }
  ],
  "segmentation": {
    "user_types": {
      "new_visitor": {
        "definition": "First-time visitor",
        "targeting": "acquisition_campaigns"
      },
      "returning_visitor": {
        "definition": "2-3 visits",
        "targeting": "engagement_campaigns"
      },
      "engaged_visitor": {
        "definition": "Multiple interactions, 3+ visits",
        "targeting": "conversion_campaigns"
      },
      "high_intent": {
        "definition": "Form submission or high engagement",
        "targeting": "retargeting_campaigns"
      }
    },
    "content_categories": {
      "homepage": "landing_acquisition",
      "reports": "proof_engagement",
      "faq": "support_consideration"
    }
  },
  "alerts": {
    "conversion_drop": {
      "threshold": -20,
      "period": "daily",
      "notification": "email"
    },
    "traffic_spike": {
      "threshold": 50,
      "period": "hourly",
      "notification": "email"
    },
    "error_rate": {
      "threshold": 5,
      "period": "hourly",
      "notification": "slack"
    }
  },
  "reporting": {
    "dashboards": [
      {
        "name": "Conversion Overview",
        "metrics": ["copy_trade_clicks", "form_submissions", "conversion_rate", "revenue"],
        "frequency": "daily"
      },
      {
        "name": "User Journey",
        "metrics": ["funnel_completion", "drop_off_points", "time_to_conversion"],
        "frequency": "weekly"
      },
      {
        "name": "Performance Analysis",
        "metrics": ["page_load_time", "bounce_rate", "engagement_rate"],
        "frequency": "daily"
      }
    ],
    "automated_reports": {
      "daily_summary": {
        "recipients": ["admin@goldcopytrading.com"],
        "time": "09:00",
        "timezone": "UTC"
      },
      "weekly_analysis": {
        "recipients": ["admin@goldcopytrading.com"],
        "day": "monday",
        "time": "10:00",
        "timezone": "UTC"
      }
    }
  }
